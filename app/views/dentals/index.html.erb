<% provide(:title, @phr.first_name) %>

<div class="row">
  <%= render 'shared/phr_info' %>
  <section>
  <div class="span8">
  <h2 style="text-align:left;">Dental Records</h2>
  <hr>
  <%= link_to "+New Record", new_phr_dental_path, class: "btn btn-small btn-secondary" %>
  <br>
  <br>
    <% if @phr.dentals.any? %>
      	<table class="table table-striped table-bordered table-condensed">
      		<thead>
        		<tr>
        			<th style = "width:24%">Date</th>
          		<th style = "width:56%">Description</th>
          		<th style = "width:5%"></th>
          		<th style = "width:5%"></th>
        		</tr>
      		</thead>
      		<tbody>
      		  <%= render @dentals %>
            <%= will_paginate @dentals %>
      		</tbody>
    	</table>
    	<table>
		    <td><%= will_paginate(@contacts) %></td>
  		</table>

    <% else %>
      You have no Dental Records<br><br>
    <% end %>
    <%= link_to 'Back', @phr, class: "btn btn-small btn-secondary"%>
    <br>
    <br>
  </div>
  </section>  
</div>