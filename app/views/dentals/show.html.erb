<% provide(:title, "Dental Record: " + @dental.dentist) %>

<div class ='row'>
	<%= render 'shared/phr_info' %>

	<section>
		<div class="span8">
			<h2 style = "text-align: left;">Dental Record</h2>
			<hr>
			<h4><%= @dental.dentist %></h4>
			<table class ="table table-striped table-bordered table-condensed">
				<tbody>
					<tr>
						<td col width="20">Description</td>
						<td><%= @dental.description %></td>
					</tr>
				</tbody>
			</table>	

			<p>
				<%= link_to "Edit", edit_phr_dental_path(@phr,@dental), class: "btn btn-small btn-secondary" %>
				<%= link_to "Done", phr_dentals_path(@phr), class: "btn btn-small btn-secondary" %> 
			</p>
		</div>
	</section>
</div>