<% provide(:title, "Optometrist Record " + @eye.date.strftime('%B %-d, %Y')) %>
<%= render 'shared/phr_info' %>
<section>
	<div class="span6">
	<h1>Optometrist Record</h1>
    <h3><%= @eye.date.strftime('%B %-d, %Y') %></h3>
    <h4><%= @eye.doctor %></h4>
    
    <p>
    <% unless @eye.glass_od_sph.nil? and @eye.glass_os_sph.nil? %>
    Eyeglass Prescription
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th colspan="2"></th>
          <th colspan="1">Sphere</th>
          <th colspan="1">Cylinder</th>
          <th colspan="1">Axis</th>
          <th colspan="1">Prism</th>
          <th colspan="1">Base</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th rowspan="2">Distance</th>
          <th rowspan="1">OD</th>
          <td><%= @eye.glass_od_sph %></td>
          <td><%= @eye.glass_od_cyl %></td>
          <td><%= @eye.glass_od_axis %></td>
          <td><%= @eye.glass_od_prism %></td>
          <td><%= @eye.glass_od_base %></td>
        </tr>
        <tr>
          <th rowspan="1">OS</th>
          <td><%= @eye.glass_os_sph %></td>
          <td><%= @eye.glass_os_cyl %></td>
          <td><%= @eye.glass_os_axis %></td>
          <td><%= @eye.glass_os_prism %></td>
          <td><%= @eye.glass_os_base %></td>
        </tr>
        <tr>
          <th rowspan="2">Add</th>
          <th rowspan="1">OD</th>
          <td><%= @eye.glass_od_add %></td>
          <td rowspan="2" colspan="4"></td>
        </tr>
        <tr>
          <th rowspan="1">OS</th>
          <td><%= @eye.glass_os_add %></td>
        </tr>
      </tbody>
    </table>
  </p>
  <% end %>
  <p>
    <%= @eye.comment %>
  </p>
  <% unless @eye.cont_od_pwr.nil? and @eye.cont_os_pwr.nil? %>
  <p>
    Contacts Prescription
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th colspan="1"></th>
          <th colspan="1">OD</th>
          <th colspan="1">OS</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th rowspan="1">Power</th>
          <td><%= @eye.cont_od_pwr %></td>
          <td><%= @eye.cont_os_pwr %></td>
        </tr>
        <tr>
          <th rowspan="1">Base</th>
          <td><%= @eye.cont_od_bc %></td>
          <td><%= @eye.cont_os_bc %></td>
        </tr>
        <tr>
          <th rowspan="1">Diameter</th>
          <td><%= @eye.cont_od_dia %></td>
          <td><%= @eye.cont_os_dia %></td>
        </tr>
        <tr>
          <th rowspan="1">Cylinder</th>
          <td><%= @eye.cont_od_cyl %></td>
          <td><%= @eye.cont_os_cyl %></td>
        </tr>
        <tr>
          <th rowspan="1">Axis</th>
          <td><%= @eye.cont_od_axis %></td>
          <td><%= @eye.cont_os_axis %></td>
        </tr>
        <tr>
          <th rowspan="1">Add</th>
          <td><%= @eye.cont_od_add %></td>
          <td><%= @eye.cont_os_add %></td>
        </tr>
        <tr>
          <th rowspan="1">Colour</th>
          <td><%= @eye.cont_od_colour %></td>
          <td><%= @eye.cont_os_colour %></td>
        </tr>
        <tr>
          <th rowspan="1">Brand</th>
          <td><%= @eye.cont_od_brand %></td>
          <td><%= @eye.cont_os_brand %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
  <p>
    <%= @eye.comment2 %>
  </p>

    <p><%= link_to "Edit", edit_phr_eye_path(@phr, @eye) %></p>
</div>
    

  </section>
  <%= link_to 'Back', phr_eyes_path(@phr) %>