  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    Eyeglass Prescription
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th colspan="2"></th>
          <th colspan="1">Sphere</th>
          <th colspan="1">Cylinder</th>
          <th colspan="1">Axis</th>
          <th colspan="1">Prism</th>
          <th colspan="1">Base</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th rowspan="2">Distance</th>
          <th rowspan="1">OD</th>
          <td><%= f.text_field :glass_od_sph %></td>
          <td><%= f.text_field :glass_od_cyl %></td>
          <td><%= f.text_field :glass_od_axis %></td>
          <td><%= f.text_field :glass_od_prism %></td>
          <td><%= f.text_field :glass_od_base %></td>
        </tr>
        <tr>
          <th rowspan="1">OS</th>
          <td><%= f.text_field :glass_os_sph %></td>
          <td><%= f.text_field :glass_os_cyl %></td>
          <td><%= f.text_field :glass_os_axis %></td>
          <td><%= f.text_field :glass_os_prism %></td>
          <td><%= f.text_field :glass_os_base %></td>
        </tr>
        <tr>
          <th rowspan="2">Add</th>
          <th rowspan="1">OD</th>
          <td><%= f.text_field :glass_od_add %></td>
          <td rowspan="2" colspan="4"><%= f.text_area :comment %></td>
        </tr>
        <tr>
          <th rowspan="1">OS</th>
          <td><%= f.text_field :glass_os_add %></td>
        </tr>
      </tbody>
    </table>
  </p>

  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comment %>
  </p>

  <p>
    Contacts Prescription
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th colspan="1"></th>
          <th colspan="1">OD</th>
          <th colspan="1">OS</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th rowspan="1">Power</th>
          <td><%= f.text_field :cont_od_pwr %></td>
          <td><%= f.text_field :cont_os_pwr %></td>
        </tr>
        <tr>
          <th rowspan="1">Base</th>
          <td><%= f.text_field :cont_od_bc %></td>
          <td><%= f.text_field :cont_os_bc %></td>
        </tr>
        <tr>
          <th rowspan="1">Diameter</th>
          <td><%= f.text_field :cont_od_dia %></td>
          <td><%= f.text_field :cont_os_dia %></td>
        </tr>
        <tr>
          <th rowspan="1">Cylinder</th>
