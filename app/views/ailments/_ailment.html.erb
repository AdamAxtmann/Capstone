<% unless ailment.deleted %>
	<tr>
		<td><%= ailment.created_at.strftime('%B %-d, %Y') %></td>
		<td><%= link_to ailment.ailment_name, [ailment.phr, ailment] %></td>
		<td><%= link_to "Edit", edit_phr_ailment_path(@phr, ailment), class: "btn btn-small btn-secondary" %></td>
		
		<td><%= link_to 'Delete', [ailment.phr, ailment], method: :delete, data: {confirm: "Are you sure you want to delete this ailment record?"}, title: ailment.ailment_name, class: "btn btn-small btn-secondary" %></td>
	</tr>
<% end %>