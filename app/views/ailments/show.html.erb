<% provide(:title, "Ailment Record: " + @ailment.ailment_name) %>

<div class ="row">
	<%= render 'shared/phr_info' %>

	<section>
		<div class="span8">
			<h2 style = "text-align: left;">Ailment Record</h2>
			<hr>
			<h4><%= @ailment.ailment_name %></h4>
			<table class ="table table-striped table-bordered table-condensed">
				<tbody>
					<tr>
						<td col width="20">Start Date</td>
						<td><%= @ailment.begin_date %></td>
					</tr>

					<tr>
						<td>End Date</td>
						<td><%= @ailment.end_date %></td>
					</tr>

					<tr>
						<td>Description</td>
						<td><%= @ailment.ailment_description %></td>
					</tr>
				</tbody>
			</table>	

			<p>
				<%= link_to "Edit", edit_phr_ailment_path(@phr,@ailment), class: "btn btn-small btn-secondary" %> 
				<%= link_to "Done", phr_ailments_path(@phr), class: "btn btn-small btn-secondary" %> 
			</p>
		</div>
	</section>
</div>