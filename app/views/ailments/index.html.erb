<% provide(:title, "Ailment Records") %>

<div class ="row">
	<%= render 'shared/phr_info' %>
	<section>
		<div class="span8">
			<h2 style = "text-align: left;">Ailment Records</h2>
			<hr>
			<%= link_to "+New Record", new_phr_ailment_path, class: "btn btn-small btn-secondary" %>
			<br>
			<br>
			
			<% if @phr.ailments.any? %>
				<table class ="table table-striped table-bordered table-condensed">
				<thead>
					<tr>
						<th style = "width:24%">Date Added</th>
						<th style = "width:56%">Ailment Name</th>
						<th style = "width:5%"></th>
						<th style = "width:5%"></th>
					</tr>
				</thead>
				<tbody>
					
					<%= render @ailments %>
					<%= will_paginate @ailments %>
				</tbody>

			</table>
			<% else %>
				You have no ailment records<br><br>
			<% end %>

			<%= link_to 'Back', @phr, class: "btn btn-small btn-secondary" %>
		   	
		</div>
		
	</section>
</div>
