
  <p>
  <%= f.label :title %>
  <%= f.select(:honorific, ['Mr', 'Mrs', 'Ms', 'Miss', 'Dr'], :prompt => true)%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </p>

  <p>
  <%= f.label :phone1, 'Primary Phone'%>
  <%= f.text_field :phone1 %>
  </p>

  <p>
  <%= f.label :phone2, 'Secondary Phone'%>
  <%= f.text_field :phone2 %>
  </p>

  <p>
  <%= f.label :email %>
  <%= f.text_field :email %>
  </p>

  <p>
  <%= f.label :description %>
  <%= f.text_area :description %>
  </p>

  <p>
  <%= f.submit 'Save Contact' %>
  <br>
  <%= link_to 'Cancel', contacts_path %>
  </p>
