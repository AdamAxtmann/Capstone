<h1>Phonebook</h1>
 
<% if @contacts.any? %> 
  <table>
    <tr>
      <th>Name</th>
      <th>Primary Phone</th>
      <th></th>
      <th></th>
    </tr>
   
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.phone1 %></td>
        <td><%= link_to 'View Contact', contact %></td>
        <td><%= link_to 'Delete', contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
<% end %>  



<%= link_to 'Create New Contact', new_contact_path %>

