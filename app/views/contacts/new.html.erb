	<%= f.label :phone2 %><br>
	<%= f.text_field :phone2 %>
	</p>

	<p>
	<%= f.label :email %><br>
	<%= f.text_field :email %>
	</p>

	<p>
	<%= f.label :description %><br>
	<%= f.text_area :description %>
	</p>

	<p>
	<%= f.submit %>
