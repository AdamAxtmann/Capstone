<%= provide(:title, "Medication Records") %>

<div class ="row">
	<%= render 'shared/phr_info' %>
	<section>
		<div class="span8">
			<h2 style = "text-align: left;">Medications</h2>
			<hr>
			<%= link_to "+New Record", new_phr_medication_path, class: "btn btn-small btn-secondary" %>
			<br>
			<br>

			<% if @phr.medications.where(:deleted => false).any? %>
				<table class ="table table-striped table-bordered table-condensed">
				<thead>
					<tr>
						<th style = "width:24%">Date Added</th>
						<th style = "width:56%">Medication Name</th>
						<th style = "width:5%"></th>
						<th style = "width:5%"></th>
					</tr>
				</thead>
				<tbody>
					
					<%= render @medications.where(:deleted => false) %>
					<%= will_paginate @medications.where(:deleted => false) %>
				</tbody>

			</table>
			<% else %>
				You have no Medication records<br><br>
			<% end %>

			<%= link_to 'Back', @phr, class: "btn btn-small btn-secondary" %>

		</div>
	</section>
</div>
