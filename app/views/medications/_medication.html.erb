<tr>
		<td><%= medication.created_at.strftime('%B %-d, %Y') %></td>
		<td><%= link_to medication.medication_name, [medication.phr, medication] %></td>
		<td><%= link_to "Edit", edit_phr_medication_path(@phr, medication), class: "btn btn-small btn-secondary" %></td>
		
		<td><%= link_to 'Delete', [medication.phr, medication], method: :delete, data: {confirm: "Are you sure you want to delete this ailment record?"}, title: medication.medication_name, class: "btn btn-small btn-secondary" %></td>
</tr>