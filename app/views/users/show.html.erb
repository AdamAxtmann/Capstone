<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>  
      	<%= link_to "New PHR", createphr_path, class: "btn btn-large btn-primary" %>
    </section>
  </aside>
  <div class="span8">
  	<h3>PHRs</h3>
    <% if @user.phrs.where(:deleted => false).any? %>
      <ol class="phrs">
        <%= render @phrs.where(:deleted => false) %>
      </ol>
      <%= will_paginate @phrs.where(:deleted => false) %>
      <% else %>
      You have no PHRs
    <% end %>
  </div>
</div>
