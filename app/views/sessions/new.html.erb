<% provide(:title, "Sign in") %>
<h2>Sign in</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
<!--
      <%= f.label :remember_me %>
      <%= f.check_box :remember_me %>
-->      <br><br>
      <%= f.submit "Sign in", class: "btn btn-small btn-secondary" %>
    <% end %>
    <p><%= link_to "Forgot your password?", new_password_reset_path, "data-no-turbolink" => true %></p>
    <p>New user? <%= link_to "Sign up now!", signup_path, "data-no-turbolink" => true %></p>
  </div>
</div>