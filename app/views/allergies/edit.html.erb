<% provide(:title, 'Edit Allergy Record') %>

<%= form_for([@phr, @allergy]) do |f| %>
<%= render 'shared/phr_info' %>
  <div class="row">
      <h2>Update Allergy Record</h2>
      <hr>
      <%= render 'shared/error_messages', object: f.object %>
     
        <div class="span6">
          <%= render 'allergy_form', f: f %>
          <%= link_to 'Cancel', phr_allergies_path, class: "btn btn-small btn-secondary" %>
        </div>
  </div>
<% end %>
