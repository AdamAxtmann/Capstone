<% provide(:title, "Allergy Records") %>

<div class="row">
  <%= render 'shared/phr_info' %>
  <section>
  <div class="span8">
  <h2 style="text-align:center;">Allergy Records</h2>
  <hr>
  <%= link_to "+New Record", new_phr_allergy_path, class: "btn btn-small btn-secondary" %>
  <br>
  <br>
    <% if @phr.allergies.any? %>
      	<table class="table table-striped table-bordered table-condensed">
      		<thead>
        		<tr>
        			<th colspan="1">Date Added</th>
          			<th colspan="1">Allergy Name</th>
          			<th colspan="1">Allergy Description</th>
          			<th colspan="1"></th>
          			<th colspan="1"></th>
        		</tr>
      		</thead>
      		<tbody>
      			<% @allergies.each do |allergy| %>
        		<tr>
              <td><%= allergy.created_at.strftime('%B %-d, %Y') %></td>
                <td><%= allergy.allergy_name %></td>
                <td><%= allergy.allergy_description %></td>
                <td><%= link_to "Edit", edit_phr_allergy_path(@phr, allergy), class: "btn btn-small btn-secondary" %></td>
                <td><%= link_to "Delete", [allergy.phr, allergy], method: :delete, data: { confirm: "Are you sure you want to delete this Blood Pressure Record?" } , title: allergy.created_at %></td>
            </tr>
        		<% end %>
      		</tbody>
    	</table>
    	<table>
		    <td><%= will_paginate(@contacts) %></td>
  		</table>

    <% else %>
      You have no Allergy Records<br><br>
    <% end %>
    <%= link_to 'Back', @phr, class: "btn btn-small btn-secondary"%>
    <br>
    <br>
  </div>
  </section>  
</div>