<% unless appointment.deleted %>
	<tr>
		<td><%= appointment.appointment_date.strftime('%B %-d, %Y') %></td>
		<td><%= link_to appointment.reason, [appointment.phr, appointment] %></td>
		<td><%= link_to "Edit", edit_phr_appointment_path(@phr, appointment), class: "btn btn-small btn-secondary" %></td>
		
		<td><%= link_to 'Delete', [appointment.phr, appointment], method: :delete, data: {confirm: "Are you sure you want to delete this ailment record?"}, title: appointment.reason, class: "btn btn-small btn-secondary" %></td>
	</tr>
<% end %>