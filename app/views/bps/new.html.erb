<% provide(:title, 'New Blood Pressure Record') %>

  <div class="row">
    <%= render 'shared/phr_info' %>
    
    <div class="span8">
      <h2 style="text-align:left;">New Blood Pressure Record</h2>
      <hr>
    </div>
    

    
    <%= form_for([@phr, @bp]) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        
        <div class="span6">
          <%= render 'bp_form', f: f %>
        
          <%= f.submit "Create Record", class: "btn btn-small btn-secondary" %>
          <%= link_to 'Cancel', phr_bps_path, class: "btn btn-small btn-secondary" %>
        </div>
    <% end %>


  </div>  
</div>