  <p>
    Date:
    <%= f.date_select :date, :start_year => 1900, :end_year => Time.now.year %>
  </p>
  
  <p>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th colspan="1">Blood Glucose(mg/dL)</th>
          <th colspan="1">Were you fasting?</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= f.text_field :sugar %></td>
          <td><%= f.select(:btype, ['yes','no'], :prompt => true) %></td>
        </tr>
      </tbody>
    </table>
  </p>

  <p>
    Comments:
    <%= f.text_area :comments %>
  </p>

  
    