<% provide(:title, "Blood Glucose Record " + @bglucose.date.strftime('%B %-d, %Y')) %>

<div class ="row">
	<%= render 'shared/phr_info' %>
	
	<section>
		<div class="span8">
		<h2 style = "text-align: left">Blood Glucose Record</h2>
		<hr>
	    <h4><%= @bglucose.date.strftime('%B %-d, %Y') %></h4>
		<table class="table table-striped table-bordered table-condensed">
		      <tbody>
		        <tr>
		        	<td col width ="25%">Blood Glucose(mg/dL)</td>
		        	<td><%= @bglucose.sugar %></td> 
		        </tr>
		        <tr>
		        	<td>Fasting?</td>
		        	<td><%= @bglucose.btype %></td>
		        </tr>
		        <tr>
		        	<td>Comments</td>
		        	<td><%= @bglucose.comments %></td>
		        </tr>
		      </tbody>
		</table>
	  	
	    <p>
	    	<%= link_to "Edit", edit_phr_bglucose_path(@phr, @bglucose), class: "btn btn-small btn-secondary" %>
	    	<%= link_to 'Done', phr_bglucoses_path(@phr), class: "btn btn-small btn-secondary" %>
	    </p>
	</div>
	    

	</section>

  