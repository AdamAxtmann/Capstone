<% provide(:title, 'Edit Blood Glucose Record') %>

<div class="row">
  <%= render 'shared/phr_info' %>
  <div class="span8">  
    <h2 style = "text-align: left">Edit Blood Glucose Record</h2>
    <hr>

    <%= form_for([@phr, @bglucose]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
       
      <div class="span6">
        <%= render 'bglucose_form', f: f %>
          
        <%= f.submit "Save", class: "btn btn-small btn-secondary" %>
        <%= link_to 'Cancel', phr_bglucose_path, class: "btn btn-small btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>