<% provide(:title, 'New Blood Glucose Record') %>

<%= form_for([@phr, @phr.bglucoses.build]) do |f| %>
<%= render 'shared/phr_info' %>
  <div class="row">


      <h2>Create New Blood Glucose Record</h2>
      <hr>
      <%= render 'shared/error_messages', object: f.object %>
     
        <div class="span6">
          <%= render 'bglucose_form', f: f %>
        
          <%= f.submit "Create Record", class: "btn btn-small btn-secondary" %>
          <%= link_to 'Cancel', phr_bglucoses_path, class: "btn btn-small btn-secondary" %>
        </div>


  </div>  
<% end %>
</div>